@model BTLBanXe.Models.tbSanPham
@using BTLBanXe.Models
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_layout1.cshtml";
}
<style>
    
    .button1 {
    background-color: red;
    color: white;
    border:none
}
.button2 {
    background-color: cornflowerblue;
    color: white;
    border:none
}

.button1:hover {
    background-color: white;
    color: red;
    border:2px solid black;
}

.button2:hover {
    background-color: white;
    color: cornflowerblue;
    border:2px solid black;
}


</style>
<div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")<span> > </span><span>Xem chi tiết</span><span></span></li>
    </ol>

    
</div>
<div style="display:inline-flex">

    <div style="border:1px double black;margin:5px;width:500px;height:350px">
        @Html.Action("AnhSP", "Home")

    </div>
    <div >
        <div style="color:cornflowerblue;font-size:35px;font-weight:bold;padding:20px"> @Html.DisplayFor(n => n.TenSP) </div>

        <div style="padding:20px" ><span style="font-size:20px;font-style:italic;color:cornflowerblue">Giá niêm yết : </span><span style="color:cornflowerblue;font-size:25px;font-style:italic">@Html.DisplayFor(n => n.GiaTien)</span> <span style="color:cornflowerblue;font-size:25px;font-style:italic">Triệu VND</span></div>

        <div style="padding-left:25px">
            <h5><span style="color:red">*</span>  Dòng xe chất lượng cao với nhiều tính năng nổi bật.</h5>
            <h5><span style="color:red">*</span>  Sản phẩm hiện đang trưng bày tại showroom Sô 3-Láng Hạ-Cầu Giấy.</h5>
            <h5><span style="color:red">*</span>  Đặt hàng trước hoặc Đăng kí lái thử để trải nghiệm sản phẩm.</h5>
        </div>
        <div style="display:inline-flex;padding:20px">
            <a class="button1" style="cursor:pointer;font-size:20px;border-radius:5%;width:200px;height:100px;margin:5px;text-align:center"  href="@Url.Action("insertCus","Home",new { @MaSP = Html.DisplayFor(n=>n.MaSP)})"><p style="margin:40px">Đặt Trước</p></a>
            <a class="button2" style="cursor:pointer;font-size:20px;border-radius:5%;width:200px;height:100px;margin:5px;text-align:center"  href="@Url.Action("insertCusLT","Home",new { @MaSP = Html.DisplayFor(n=>n.MaSP)})"><p style="margin:40px">Lái Thử</p></a>
      </div>

    </div>
</div>
    
       
<div style="margin-top:30px">
    <h4 style="width:1200px;font-size:20px">
        Thông số kĩ thuật
    </h4>
    <div style="border-top:1px solid red">
        <table class="table  table-striped table-responsive">
            <thead>
                <tr style="">
                    <th style="font-weight:bold;text-align: center;width:40%">Thuộc tính</th>
                    <th style="font-weight:bold;text-align: center;width:40%">Chi tiết</th>

                </tr>
            </thead>
            <tbody  >
                <tr >
                    <td style="text-align: center" >Khối lượng của xe (kg)</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.CanNang) </td>

                </tr>
                <tr>
                    <td style="text-align: center">Chiều dài xe (mm)</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.CD)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Chiều rộng xe (mm)</td>
                    <td style="font-weight:bold ;text-align: center" >@Html.DisplayFor(n => n.CR)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Chiều cao xe (mm)</td>
                    <td style="font-weight:bold ;text-align: center ">@Html.DisplayFor(n => n.CC)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Số chỗ ngồi</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.SoCho)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Năm sản xuất</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.NamSX)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Màu xe</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.MauSac)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Dung tích xăng (lít)</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.DungTichXang)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Loại động cơ </td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.LoaiDongCo)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Công suất tối đa (Vòng/Phút)</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.CongSuatToiDa)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Loại lốp</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.LoaiLop)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Loại khung</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.LoaiKhung)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Hộp số</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.HopSo)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Hệ thống khởi động</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.HTKD)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Dung tích xilanh (cm3)</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.DTXL)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Tỉ số nén</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.TSNen)</td>

                </tr>
                <tr>
                    <td style="text-align: center">Tốc độ tối đa (km/h)</td>
                    <td style="font-weight:bold ;text-align: center">@Html.DisplayFor(n => n.TocDoTD)</td>

                </tr>
                <tr>
                    <td ></td>
                    <td style="font-weight:bold"></td>

                </tr>
            </tbody>
        </table>
    </div>

</div>
<h4>Giới Thiệu</h4>
<iframe frameborder="0" width="1000" height="800" src="~/Mota/@Html.DisplayFor(n=>n.Mota)"></iframe>

<div>
    @Html.Action("spLienQuanPartial", "Home")
</div>






